<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    tools:ignore="HardcodedText"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/greenDoctor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/TV_C_Appointment_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="appointment date/time"
            android:textColor="@color/pureWhite"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/TV_C_Appointment_patient_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_dateTime"
            android:text="Name"
            android:textColor="@color/pureWhite"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/TV_C_Appointment_doctor_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_patient_fullName"
            android:text="Number"
            android:textColor="@color/pureWhite"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/B_C_Appointment_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_doctor_number"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/bluePatient"
            android:text="View Appointment Form" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>