<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    tools:ignore="HardcodedText">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/pureBlack">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TV_D_Delete_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/keania_one_regular"
                android:text="Cancel Appointment"
                android:textAlignment="center"
                android:textColor="@color/pureWhite"
                android:textSize="25sp" />


            <ImageView
                android:id="@+id/I_D_Delete_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/TV_D_Delete_Title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_delete" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/I_D_Delete_logo"
                android:layout_marginBottom="10dp"
                >
                <Button
                    android:id="@+id/B_D_Delete_Confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:backgroundTint="@color/greenDoctor"
                    android:fontFamily="@font/consola"
                    android:text="Confirm"
                    android:layout_weight="1">
                </Button>

                <Button
                    android:id="@+id/B_D_Delete_Back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:backgroundTint="@color/pureRed"
                    android:fontFamily="@font/consola"
                    android:text="Back"
                    android:layout_weight="1">
                </Button>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>