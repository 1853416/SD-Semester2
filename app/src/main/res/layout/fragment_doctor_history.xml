<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:barrierMargin="10dp"
    tools:context=".Fragment_Doctor_History"

    android:background="@color/greenDoctor2"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/TITLE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/keania_one_regular"
            android:text="Appointment History"
            android:textAlignment="center"
            android:textColor="@color/pureWhite"
            android:backgroundTint="@color/pureWhite"
            android:textSize="35sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_F_Doctor_History"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TITLE" />

    </RelativeLayout>

</ScrollView>