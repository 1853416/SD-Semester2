<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    tools:ignore="HardcodedText"
    app:cardBackgroundColor="@color/bluePatient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/TV_C_Appointment_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="appointment date/time"

            android:textAlignment="center"
            android:textColor="@color/pureWhite"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_C_Appointment_patient_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_dateTime"

            android:textAlignment="center"

            android:text="Name"
            android:textColor="@color/pureWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/TV_C_Appointment_patient_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_patient_fullName"

            android:text="Number"

            android:textAlignment="center"
            android:textColor="@color/pureWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/B_C_Appointment_Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_patient_number"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/pureRed"
            android:fontFamily="@font/consola"
            android:text="Cancel Appointment"
            android:textSize="15sp"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>