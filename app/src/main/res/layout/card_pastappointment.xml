<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    tools:ignore="HardcodedText"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/bluePatient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/TV_C_Appointment_AppDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="appointment date/time"
            android:textColor="@color/pureWhite"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_C_Appointment_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_AppDate"
            android:text="Name"
            android:textColor="@color/pureWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/TV_C_Appointment_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_C_Appointment_Name"
            android:text="Number"
            android:textColor="@color/pureWhite"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/TV_C_Appointment_Number"
            >

            <Button
                android:id="@+id/B_C_Appointment_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="View "
                android:layout_weight="1"/>

            <Button
                android:id="@+id/B_C_Missed_Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/pureRed"
                android:text="Missed"
                android:layout_weight="1"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>