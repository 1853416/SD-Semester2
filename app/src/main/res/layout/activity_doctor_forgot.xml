<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Doctor_Forgot_Password"
    android:background="@drawable/custom_trans2"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/TV_A_DoctorForgot_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:textAlignment="center"

        android:textColor="@color/pureWhite"
        android:text="Reset Password"
        android:textSize="45sp"
        android:fontFamily="@font/keania_one_regular"
        >
    </TextView>

    <ImageView
        android:id="@+id/IV_A_DoctorForgot_DoctorLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/TV_A_DoctorForgot_Title"
        android:layout_marginTop="70dp"

        android:src="@drawable/doctor_icon">
    </ImageView>

    <TextView
        android:id="@+id/TV_A_DoctorForgot_DoctorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_below="@id/IV_A_DoctorForgot_DoctorLogo"

        android:textColor="@color/pureWhite"
        android:text="Doctor"
        android:textSize="35sp"
        android:fontFamily="@font/keania_one_regular"
        >
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/IL_A_DoctorForgot_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_A_DoctorForgot_DoctorTitle"
        android:layout_marginTop="30dp"

        style="@style/LoginTextInputLayoutStyle"

        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ET_A_DoctorForgot_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"

            android:inputType="text"
            android:textSize="20sp"
            android:textColor="@color/pureWhite"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/B_A_DoctorForgot_Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IL_A_DoctorForgot_Email"
        android:layout_marginHorizontal="100dp"

        android:fontFamily="@font/keania_one_regular"
        android:text="Confirm"
        android:textColor="@color/pureWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/B_A_DoctorForgot_Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/B_A_DoctorForgot_Confirm"
        android:layout_marginHorizontal="100dp"

        android:fontFamily="@font/keania_one_regular"
        android:text="Back"
        android:textColor="@color/pureWhite"
        android:textSize="20sp" />
</RelativeLayout>